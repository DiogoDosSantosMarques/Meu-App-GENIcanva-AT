<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/layoutPrincipal"
    >

    <TextView
        android:id="@+id/genicanva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pin"
        android:text="GENICANVA!"
        android:textColor="#FF6200EE"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEM VINDO AO"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <Button
        android:id="@+id/ircadastro"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:text="Criar uma Conta"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="554dp" />

    <Button
        android:id="@+id/irlogin"
        android:backgroundTint="@color/purple_500"
        android:layout_width="219dp"
        android:layout_height="52dp"
        android:text="Fazer Login"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="630dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chopsic"
        android:text="G"
        android:textColor="@color/white"
        android:textSize="200sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chopsic"
        android:text="C"
        android:textSize="200sp"
        android:textColor="@color/purple_500"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="307dp" />


</androidx.constraintlayout.widget.ConstraintLayout>